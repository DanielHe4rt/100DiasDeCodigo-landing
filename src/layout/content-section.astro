---
export interface Props {
  id: string;
  title: string;
  titleAlign?: string;
  description?: string;
  descriptionAlign?: string;
  align?: string;
  extraclass?: string;
}

const { extraclass, title, id,description,titleAlign,descriptionAlign } = Astro.props;
const align = Astro.props.align || 'center';
---

<section
  id={id}
  class={`flex scroll-mt-24 flex-col items-${align} gap-4 space-y-8 ${extraclass}`}
>
  <div class=`flex flex-col items-${align} gap-4`>
    <h2
      class=`color-secondary text-${titleAlign} font-bold tracking-tight text-4xl`
    >
      {title}
    </h2>
    <p class=`color-secondary text-xl text-${descriptionAlign} font-normal`>{description}</p>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
